{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Path aliases for the main app
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@clippis/ui": ["./packages/ui/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.json",
    "forge.env.d.ts",
    "vitest.config.ts",
    "e2e/**/*.ts"
  ],
  "exclude": ["node_modules", "packages"]
}
